{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.tsx"
    ]
}