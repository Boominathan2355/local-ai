{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "declaration": true,
        "types": [
            "electron-vite/node"
        ]
    },
    "include": [
        "electron/**/*",
        "electron.vite.config.ts",
        "src/types/**/*"
    ]
}